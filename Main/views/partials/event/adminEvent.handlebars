<style>
    .card {
	display: flex;
	align-items: center;
	flex-direction: column;
    border-style: solid;
    border-radius: 5px;
    height: 200px;
    width: 175px;
    margin: 5px;
    padding: 5px;
    background-color: rgb(166, 252, 199);
}

.eventName {
    height: 20px;
    width: 150px;
    display: flex;
    justify-content: center;
}

.EventDescription {
    background-color: #d5eaee;
    padding: 10px;
    height: 45px;
}

.container.container-fluid.mt-5 {
  display: flex;
  justify-content: center;
  align-content: center;
  margin: 25px;
  flex-direction: column;
}

</style>

<div class="eventCardContainer flex justify-center align-center" class="specialEventArea">
    {{#if events.length}}
        {{#each events as |event|}}
            <div class="card" id="eventCard-{{id}}">
                <div class="eventTitleRow flex justify-center align-center gap10">
                    <h4 class="EventName">{{ title }}</h4>
                    <button class="delete-event-button" data-id="{{id}}">Delete</button>
                </div>
                <p class="EventDescription">{{ description }}</p>
                <div class="EventDate">
                    {{ event_date }}
                </div>
                <div class="EventCreator">
                    {{ name }}
                </div>
            </div>
    {{/each}}
    {{else}}

    {{/if}}
</div>